FROM python:3.12-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install \
    --no-cache-dir \
    --default-timeout=300 \
    --retries 10 \
    --extra-index-url https://download.pytorch.org/whl/cpu \
    -r requirements.txt

COPY src ./src

EXPOSE 8030

CMD ["uvicorn", "src.api.server_ai_chat:app", "--host", "0.0.0.0", "--port", "8030"]
